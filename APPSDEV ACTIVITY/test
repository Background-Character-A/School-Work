using System;

namespace Activity
{
    // See https://aka.ms/new-console-template for more information
    class Activity
    {
        static void Main(String[] args)
        {
            double totalCost;
            int eggQuantity = 50;
            double eggPrice = 5;
            int hotdogQuantity = 50;
            double hotdogPrice = 10;
            int ballQuantity = 50;
            double ballPrice = 15;
            string response;
            bool flag = true;
            while (flag)
            {
                Console.WriteLine("ITEM NAME\t" + "ITEM QUANTITY\t" + "ITEM PRICE");
                Console.WriteLine("1. EGG\t" + eggQuantity + "\t" + eggPrice);
                Console.WriteLine("2. HOTDOG\t" + hotdogQuantity + "\t" + hotdogPrice);
                Console.WriteLine("3. BALL\t" + ballQuantity + "\t" + ballPrice);

                Console.WriteLine("What item do you want to purchase? (1/2/3)");
                int itemCode = int.Parse(Console.ReadLine());

                Console.WriteLine("How many do you want?");
                int quanity = int.Parse(Console.ReadLine());

                switch(itemCode)
                {}

                
                Console.WriteLine("Do you want to add another item? (YES/NO)");
                response = Console.ReadLine().ToUpper();
                if(response != "YES")
                {
                    flag = false;
                }
            }

            double discount = 0;
            if(totalCost > 100 || totalCost < 199)
            {
                discount = totalCost * 0.1;
            }
            else if(totalCost > 200 || totalCost < 499)
            {
                discount = totalCost * 0.15;
            }
            else if(totalCost > 500)
            {
                discount = totalCost * 0.2;
            }
            double finalAmount = totalCost - discount;
            Console.WriteLine(totalCost);
            Console.WriteLine(discount);
            Console.WriteLine(finalAmount);
        }
    }

}
